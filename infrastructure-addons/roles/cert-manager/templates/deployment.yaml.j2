apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-dns
spec:
  acme:
    server: https://acme-staging-v02.api.letsencrypt.org/directory
    email: "{{ email }}"
    privateKeySecretRef:
      name: letsencrypt-key-pair
    solvers:
      - http01:
          ingress:
            class: nginx